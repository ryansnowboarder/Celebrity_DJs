<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    android:weightSum="1.0">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/black"
        android:text="@string/contact_title"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_marginTop="16dp"
        android:id="@+id/map2"
        tools:layout="@layout/activity_maps"
        tools:context="com.celebritysoundandlight.celebritydjs.MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@color/dark_orange"
        android:text="care@celebritysoundandlight.com\n(+1) 781-874-0625"
        android:textColor="@color/white" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:weightSum="1.0" >

        <ImageView
            android:id="@+id/contact_facebook"
            android:layout_weight="0.33"
            android:layout_height="100dp"
            android:src="@drawable/facebook_logo" />

        <ImageView
            android:id="@+id/contact_twitter"
            android:layout_weight="0.33"
            android:layout_height="100dp"
            android:src="@drawable/twitter_logo" />

        <ImageView
            android:id="@+id/contact_pinterest"
            android:layout_weight="0.33"
            android:layout_height="100dp"
            android:src="@drawable/pinterest_logo" />

    </TableRow>

</LinearLayout>